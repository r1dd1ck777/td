{% extends 'AppMainBundle::layout.html.twig' %}

{% import 'AppMainBundle:Macros:breadcrambs.html.twig' as breadcrambs %}
{% block breadcrumbs %}{{ breadcrambs.feedback() }}{% endblock %}

{% form_theme formView 'AppMainBundle:Form:fields.html.twig' %}

{% block content %}
    <div class="app-main default feedback-from">
        {% render(controller('RidPageBundle:Page:renderPage', {slug: 'contacts'})) %}
        <div class="clearfix"></div>
        <div class="rid-page">
            <div class="page-block">
                <h2>Обратная связь</h2>
                <hr>
            </div>
        </div>

        <div class="clearfix"></div>
        {{ form_start(formView) }}
        <table>
            <tbody>
            <tr>
                <td class="td-1">
                    {{ form_row(formView.name) }}
                    {{ form_row(formView.email) }}
                    {{ form_row(formView.phone) }}
                </td>
                <td class="td-2">
                    {{ form_row(formView.message) }}
                </td>
            </tr>
            </tbody>
        </table>

        {{ form_rest(formView) }}
        {{ form_end(formView) }}
    </div>
{% endblock %}

