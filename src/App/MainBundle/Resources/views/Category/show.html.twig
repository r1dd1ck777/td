{% extends 'AppMainBundle::layout.html.twig' %}
{% block content %}
    <div class="app-main category show">
        {% include 'AppMainBundle:Category/partials:_list_wrapper.html.twig' with { categories: category.getChilds } %}
    </div>

    {% if category.page is not null %}
        <div class="clearfix"></div>
        {% render(controller('RidPageBundle:Page:renderPage', {slug: category.page.slug})) %}
    {% endif %}
{% endblock %}
